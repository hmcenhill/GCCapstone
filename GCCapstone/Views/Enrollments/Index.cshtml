@model GCCapstone.Data.ViewDataVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Courses.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Category)
                    </td>
                    <td>
                        <a asp-action="Enroll" asp-route-id="@course.CourseId">Enroll</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No Available Classes!</h4>
    <p><a asp-controller="Home" asp-action="Index">Return to Main</a></p>

}

